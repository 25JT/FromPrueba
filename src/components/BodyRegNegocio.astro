<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap"
  rel="stylesheet"
/>
<link
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
  rel="stylesheet"
/>
<link
  href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
  rel="stylesheet"
/>

<div class="bg-gray-200 font-display text-[#0d121b]">
  <div
    class="relative flex min-h-screen w-full flex-col items-center justify-center p-4 sm:p-6 md:p-8"
  >
    <div class="w-full max-w-5xl rounded-xl bg-white /50 p-8 shadow-sm">
      <div class="mb-8">
        <h1
          id="tituloNegocio"
          class="uppercase text-2xl sm:text-4xl font-black leading-tight tracking-[-0.033em] text-[#0d121b]"
        >
          Registro de Negocio
        </h1>
      </div>

      <form id="registroNegocio" class="space-y-6">
        <div class="grid grid-cols-1 gap-x-12 gap-y-8 md:grid-cols-2">
          <!-- Column 1: Información General -->
          <div class="flex flex-col gap-6">
            <h2
              class="text-sm sm:text-xl font-bold text-gray-800 border-b pb-2 border-blue-500"
            >
              Información General
            </h2>
            <label class="flex flex-col" for="nombre_establecimiento">
              <p class="text-sm sm:text-base font-medium leading-normal pb-2">
                Nombre del Establecimiento
              </p>
              <div class="relative flex items-center">
                <input
                  id="nombre_establecimiento"
                  name="nombre_establecimiento"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0d121b] focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] bg-background-light h-14 placeholder:text-[#4c669a] p-4 pl-12 text-base font-normal leading-normal"
                  placeholder="Introduce el nombre"
                  required
                />
                <span
                  class="material-symbols-outlined absolute left-4 text-gray-400"
                  >store</span
                >
              </div>
            </label>

            <label class="flex flex-col" for="telefono_establecimiento">
              <p class="text-sm sm:text-base font-medium leading-normal pb-2">
                Teléfono
              </p>
              <div class="relative flex items-center">
                <input
                  id="telefono_establecimiento"
                  name="telefono_establecimiento"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0d121b] focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] bg-background-light h-14 placeholder:text-[#4c669a] p-4 pl-12 text-base font-normal leading-normal"
                  placeholder="Introduce el número de teléfono"
                  required
                />
                <span
                  class="material-symbols-outlined absolute left-4 text-gray-400"
                  >phone</span
                >
              </div>
            </label>

            <label class="flex flex-col" for="direccion">
              <p class="text-sm sm:text-base font-medium leading-normal pb-2">
                Dirección
              </p>
              <div class="relative flex items-center">
                <input
                  id="direccion"
                  name="direccion"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0d121b] focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] bg-background-light h-14 placeholder:text-[#4c669a] p-4 pl-12 text-base font-normal leading-normal"
                  placeholder="Introduce la dirección"
                  required
                />
                <span
                  class="material-symbols-outlined absolute left-4 text-gray-400"
                  >location_on</span
                >
              </div>
            </label>

            <div class="flex flex-col gap-3">
              <p class="text-sm sm:text-base font-medium leading-normal">
                Tipo de Servicio
              </p>
              <div class="flex flex-col gap-3">
                <label
                  for="estilista"
                  class="flex items-center gap-4 rounded-lg border border-solid border-[#cfd7e7] p-[15px] cursor-pointer transition-colors hover:border-primary/70 has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                >
                  <input
                    id="estilista"
                    type="radio"
                    name="tipo_servicio"
                    value="estilista"
                    class="h-5 w-5 border-2 border-gray-400 bg-transparent text-transparent checked:border-primary checked:bg-primary focus:outline-none focus:ring-0 focus:ring-offset-0"
                    required
                  />
                  <p
                    class="text-[#0d121b] text-sm sm:text-base font-medium leading-normal"
                  >
                    Estilista Femenina
                  </p>
                </label>
                <!-- 
                <label
                  for="estilista_masculino"
                  class="flex items-center gap-4 rounded-lg border border-solid border-[#cfd7e7] p-[15px] cursor-pointer transition-colors hover:border-primary/70 has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                >
                  <input
                    id="estilista_masculino"
                    type="radio"
                    name="tipo_servicio"
                    value="estilista_masculino"
                    class="h-5 w-5 border-2 border-gray-400 bg-transparent text-transparent checked:border-primary checked:bg-primary focus:outline-none focus:ring-0 focus:ring-offset-0"
                  />
                  <p class="text-[#0d121b] text-sm font-medium leading-normal">
                    Estilista Masculino
                  </p>
                </label> -->

                <label
                  for="barbero"
                  class="flex items-center gap-4 rounded-lg border border-solid border-[#cfd7e7] p-[15px] cursor-pointer transition-colors hover:border-primary/70 has-[:checked]:border-primary has-[:checked]:bg-primary/5"
                >
                  <input
                    id="barbero"
                    type="radio"
                    name="tipo_servicio"
                    value="barbero"
                    class="h-5 w-5 border-2 border-gray-400 bg-transparent text-transparent checked:border-primary checked:bg-primary focus:outline-none focus:ring-0 focus:ring-offset-0"
                  />
                  <p
                    class="text-[#0d121b] text-sm sm:text-base font-medium leading-normal"
                  >
                    Barbería
                  </p>
                </label>
              </div>
            </div>
          </div>

          <!-- Column 2: Horario y Tarifas -->
          <div class="flex flex-col gap-6">
            <h2
              class="text-lg sm:text-xl font-bold text-gray-800 border-b border-blue-500 pb-2"
            >
              Horario y Tarifas
            </h2>
            <div class="flex flex-col gap-2">
              <p class="text-sm sm:text-base font-medium leading-normal">
                Días de Trabajo
              </p>
              <div class="flex flex-wrap sm:grid sm:grid-cols-7 gap-2">
                <!-- Lunes -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="lunes"
                    name="dias_trabajo"
                    value="Lunes"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-gray-700 transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    LU
                  </div>
                </label>

                <!-- Martes -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="martes"
                    name="dias_trabajo"
                    value="Martes"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-gray-700 transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    MA
                  </div>
                </label>

                <!-- Miércoles -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="miercoles"
                    name="dias_trabajo"
                    value="Miércoles"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-gray-700 transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    MI
                  </div>
                </label>

                <!-- Jueves -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="jueves"
                    name="dias_trabajo"
                    value="Jueves"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-gray-700 transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    JU
                  </div>
                </label>

                <!-- Viernes -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="viernes"
                    name="dias_trabajo"
                    value="Viernes"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-gray-700 transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    VI
                  </div>
                </label>

                <!-- Sábado -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="sabado"
                    name="dias_trabajo"
                    value="Sábado"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-gray-700 transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    SA
                  </div>
                </label>

                <!-- Domingo -->
                <label class="cursor-pointer">
                  <input
                    type="checkbox"
                    id="domingo"
                    name="dias_trabajo"
                    value="domingo"
                    class="peer sr-only"
                  />
                  <div
                    class="flex h-12 w-12 items-center justify-center rounded-lg border border-gray-300 bg-background-light font-medium text-black transition-colors hover:bg-gray-200 peer-checked:bg-blue-500 peer-checked:text-white peer-checked:border-primary"
                  >
                    DO
                  </div>
                </label>
              </div>
            </div>

            <div class="flex flex-col gap-2">
              <p class="text-sm sm:text-base font-medium leading-normal">
                Horario de Apertura
              </p>
              <div class="grid grid-cols-2 gap-4">
                <div class="flex flex-col">
                  <label
                    for="hora_inicio"
                    class="text-sm sm:text-base font-normal leading-normal pb-2 text-gray-600"
                  >
                    Hora Inicio
                  </label>
                  <div class="relative flex items-center">
                    <input
                      type="time"
                      id="hora_inicio"
                      name="hora_inicio"
                      min="06:00"
                      max="22:00"
                      step="3600"
                      pattern="[0-9]{2}:00"
                      class="form-input text-xs sm:text-base flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0d121b] focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] bg-background-light h-14 p-4 pl-12 font-normal leading-normal"
                      required
                    />
                    <span
                      class="material-symbols-outlined absolute left-4 text-gray-400 pointer-events-none"
                      >schedule</span
                    >
                  </div>
                  <p id="hora-error" class="mt-1 text-sm text-red-600 hidden">
                    La hora debe ser en punto (minutos :00)
                  </p>
                </div>

                <div class="flex flex-col">
                  <label
                    for="hora_fin"
                    class="text-sm sm:text-xs font-normal leading-normal pb-2 text-gray-600"
                  >
                    Hora Fin
                  </label>
                  <div class="relative flex items-center">
                    <input
                      type="time"
                      id="hora_fin"
                      name="hora_fin"
                      min="06:00"
                      max="22:00"
                      step="3600"
                      pattern="[0-9]{2}:00"
                      class="form-input flex text-xs sm:text-base w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0d121b] focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] bg-background-light h-14 p-4 pl-12 font-normal leading-normal"
                      required
                    />
                    <span
                      class="material-symbols-outlined absolute left-4 text-gray-400 pointer-events-none"
                      >schedule</span
                    >
                  </div>
                  <p
                    id="hora-fin-error"
                    class="mt-1 text-sm sm:text-base text-red-600 hidden"
                  >
                    La hora final debe ser en punto (minutos :00)
                  </p>
                </div>
              </div>
            </div>

            <label class="flex flex-col" for="precio">
              <p class="text-sm sm:text-base font-medium leading-normal pb-2">
                Precio por Servicio
              </p>
              <div class="relative flex items-center">
                <span class="absolute left-4 text-gray-500 text-base"></span>
                <input
                  id="precio"
                  name="precio"
                  class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-[#0d121b] focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-[#cfd7e7] bg-background-light h-14 placeholder:text-[#4c669a] p-4 pl-8 text-base font-normal leading-normal"
                  placeholder="$25.000"
                  type="text"
                  required
                />
                <span
                  class="absolute right-4 text-gray-500 text-sm font-medium"
                >
                  <span class="text-gray-500 text-base">|</span>
                  COP</span
                >
              </div>
            </label>
          </div>
        </div>

        <!-- Footer -->
        <div class="mt-12 pt-8 border-t border-blue-500">
          <button
            type="submit"
            class="w-full h-14 px-6 bg-primary border-2 border-black hover:border-blue-400 text-black font-bold text-lg rounded-lg transition-colors hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
            >Registrar Negocio</button
          >
        </div>
      </form>
    </div>
  </div>
</div>

<script src="../utils/BodyRegNegocioJs.js"></script>
