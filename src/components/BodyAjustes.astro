                    <span
                      class="material-symbols-outlined text-slate-300 peer-checked:opacity-0 text-[20px] absolute"
                      >radio_button_unchecked</span
                    >
                    <span
                      class="material-symbols-outlined text-blue-500 text-[20px] opacity-0 peer-checked:opacity-100 absolute"
                      >check_circle</span
                    >
